    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_entertainment">

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.example.testframe.ui.news.NewsFragment"
        android:label="@string/title_news"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_entertainment"
        android:name="com.example.testframe.ui.entertainment.EntertainmentFragment"
        android:label="@string/title_entertainment"
        tools:layout="@layout/fragment_entertainment" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.testframe.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_market"
        android:name="com.example.testframe.ui.profile.ProfileFragment"
