<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    tools:layout_editor_absoluteY="81dp">


    <ImageView
        android:id="@+id/market_item_image"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@tools:sample/avatars" />


    <TextView
        android:id="@+id/market_item_text"
        android:layout_width="228dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/market_price_text"
        app:layout_constraintStart_toEndOf="@+id/market_item_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/full_names"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/market_price_text"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="10000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/market_item_image"
        app:layout_constraintTop_toBottomOf="@+id/market_item_text"
        android:layout_marginLeft="8dp" />
    <TextView
        android:id="@+id/market_pts_text"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:text=" баллов"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/market_price_text"
        app:layout_constraintTop_toBottomOf="@+id/market_item_text" />
    <Button
        android:id="@+id/buy_button"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:text="Купить"
        app:layout_constraintTop_toTopOf="@+id/market_item_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="11dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>